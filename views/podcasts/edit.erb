<main class="edit-page">

  <h1>Update a listing</h1>

  <%action = "/podcasts"%>
  <% if edit %>
    <% action += "/" + podcasts["id"]%>
  <%end%>

  <% if is_logged_in?() %>

  <form action="<%=action%>" method="POST">
    <% if edit %>
      <input type="hidden" name="_method" value="PUT">
    <%end%>

    <label for="podcast_title"> Name: </label>
    <input name="podcast_title" value="<%=podcasts["podcast_title"]%>"/>

    <label for="genre">Genre:</label>
    <input name="genre" value="<%=podcasts["genre"]%>"/>

    <label for="image_url">Image:</label>
    <input name="image_url" value="<%=podcasts["image_url"]%>"/>

    <label for="about">About:</label>
    <input name="about" value="<%=podcasts["about"]%>"/>

    <label for="show_url">Link:</label>
    <input name="show_url" value="<%=podcasts["show_url"]%>"/>


  <% button_value = "Add show" %>
  <% if edit %>
    <% button_value = "Update" %>
  <%end%>
    <input class="update-show-btn" type="submit" value="<%= button_value%> " />

  </form>

</main>

<% else %>
  <a class="user_auth" href="/sign_up">Sign up</a>
  <a class="user_auth" href="/login">Log in</a>

<% end %>

