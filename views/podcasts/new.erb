<main class="recommend-content">
  <h1>Recommend a new podcast</h1>

  <% if is_logged_in?() %>

  <section class="new-show-form">
    <form class="new-show" action="/podcasts" method="POST">

      <label for="podcast_title"> Name: </label>
      <input type="text" name="podcast_title"/>

      <label for="genre">Genre:</label>
      <input type="text" name="genre"/>

      <label for="image_url">Image:</label>
      <input type="text" name="image_url"/>

      <label for="about">About:</label>
      <input type="text" name="about"/>

      <label for="show_url">Link:</label>
      <input type="text" name="show_url"/>

      <% button_value = "Add show" %>
      <button>Add show</button>
  
    </form>
    <img class="new-show-image" src="https://res.cloudinary.com/shell-shell/image/upload/v1623461664/Screen_Shot_2021-06-08_at_3.14.22_pm_yxupcy.png" alt="">


    <% else %>
    <div class="access-btns">
      <button class="user_auth"><a href="/sign_up">Sign up</a></button>
      <button class="user_auth"><a href="/login">Log in</a></button>
      <% end %>
    </div>
   </section>
</main>