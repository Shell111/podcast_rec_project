<main class="page-content">
  <h1>Recommend a new podcast</h1>

  <section class="new-show-form">
    <form class="new-show" action="/podcasts" method="POST">

      <label for="name"> Name: </label>
      <input type="text" name="name"/>

      <label for="genre">Genre:</label>
      <select id="genre" name="genre">
      <option value="culture">Pop culture</option>
      <option value="comedy">Comedy</option>
      <option value="documentary">Documentary</option>
      <option value="fiction">Fiction</option>
      <option value="tech">Tech</option>
      <option value="work">Work & productivity</option>
      <option value="crime">True crime</option>
    </select>

      <label for="image_url">Image:</label>
      <input type="text" name="image_url"/>

      <label for="synopsis">Synopsis:</label>
      <input type="text" name="synopsis"/>

      <label for="show_url">Link:</label>
      <input type="text" name="show_url"/>


      <button>Add show</button>

    </form>
      <img class="new-show-image" src="https://images.unsplash.com/photo-1584679109597-c656b19974c9?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8YWxidW18ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="">
   </section>
</main>