
<h2 class="intro">
<% if is_logged_in?() %>
   Hey <%=current_user["first_name"]%>! Wanna recommend a new ep?
</h2>
<div class="log-out-btn">
  <form class="log-out" action="/sessions" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Log out">
  </form>
</div>


<div class="access-btns">
  <% else %>
    <button class="user_auth"><a href="/sign_up">Sign up</a></button>
    <button class="user_auth"><a href="/login">Log in</a></button>
  <% end %>
</div>


<main class="podcast-listing">
  <% podcasts.each do |podcast|%>

    <section class="podcast">
      <img src="<%=podcast["image_url"] %>" alt="<%= podcast["podcast_title"]%> podcast image">

      <h3><%= podcast["podcast_title"]%></h3>

      <h4><%= podcast["genre"]%></h4>
      <p>About:</p>
      <p><%= podcast["about"]%></p>

      <a href="/podcasts/<%= podcast["id"]%>"> View show </a>
    </section>
  
  <% end %>
</main>